# Copy this file to backend/.env and set values for your environment

# Session
SESSION_SECRET=change-me-super-secret

# Database
DB_HOST=db
DB_USER=appuser
DB_PASS=apppassword
DB_NAME=appdb
DB_PORT=3306

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Frontend origin (used by backend CORS when set)
# Example: http://localhost:8081
FRONTEND_ORIGIN=

# Optional: set a cookie domain to enable SSO across subdomains (e.g. .example.com)
# COOKIE_DOMAIN=.example.com

# Node environment
NODE_ENV=development
